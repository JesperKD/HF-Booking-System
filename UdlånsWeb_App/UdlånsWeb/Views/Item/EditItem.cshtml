@model UdlånsWeb.Models.Item

@{
    ViewData["Title"] = "EditItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditItem</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItem" asp-controller="Item" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HostName" class="control-label"></label>
                <input asp-for="HostName" class="form-control" />
                <span asp-validation-for="HostName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostPassword" class="control-label"></label>
                <input asp-for="HostPassword" class="form-control" />
                <span asp-validation-for="HostPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VmWareVersion" class="control-label"></label>
                <input asp-for="VmWareVersion" class="form-control" />
                <span asp-validation-for="VmWareVersion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostIp" class="control-label"></label>
                <input asp-for="HostIp" class="form-control" />
                <span asp-validation-for="HostIp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPeoplePerHost" class="control-label"></label>
                <input asp-for="NumberOfPeoplePerHost" class="form-control" />
                <span asp-validation-for="NumberOfPeoplePerHost" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rented" /> @Html.DisplayNameFor(model => model.Rented)
                </label>
            </div>
            <div hidden class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AdminSite">Tilbage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
