@model ItemViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "AdminSite";
}


<div class="container-fluid">
    <div class="row">
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            @if (Model.Items[i].Rented == false)
            {
                <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 py-2">
                    <button name="CollapButton" type="button" class="collapsible bg-success text-white" value="">@Model.Items[i].HostName</button>
                    <div class="content" style="border : solid 2px black;">
                        <div>
                            <button class="RentColorGreen"></button>
                            <p>Status: Ledig</p>

                            <dl style="margin: 0px 10px 0px 0px;">
                                <dt>
                                    Brugernavn:
                                </dt>
                                <dd>
                                    @Model.Items[i].UserName
                                </dd>
                                <dt>
                                    Ip:
                                </dt>
                                <dd>
                                    @Model.Items[i].HostIp<br />
                                </dd>
                                <dt>
                                    Adgangskode:
                                </dt>
                                <dd>
                                    @Model.Items[i].HostPassword<br />
                                </dd>
                                <dt>
                                    VmWare version:
                                </dt>
                                <dd>
                                    @Model.Items[i].VmWareVersion<br />
                                </dd>
                                @if (Model.Bookings != null)
                                {
                                    <dt>
                                        Lånt til:
                                    </dt>
                                    <dd>
                                        @for (int j = 0; j < Model.Bookings.Count; j++)
                                        {
                                            if(Model.Bookings[j].Id == Model.Items[i].Id)
                                            {
                                                @Model.Bookings[j].RentedClient
                                            }
                                        }
                                    </dd>
                                    <dt>
                                        Lejning udløber:
                                    </dt>
                                    <dd>
                                        @for (int j = 0; j < Model.Bookings.Count; j++)
                                        {
                                            if(Model.Bookings[j].Id == Model.Items[i].Id)
                                            {
                                                @Model.Bookings[j].HostRentedForCourse.TurnInDate
                                            }
                                        }
                                    </dd>
                                }
                            </dl>

                            <ul style="display: inline-block; list-style-type:none;">
                                <li style="margin-left: 10px; display: inline-block; list-style-type: none;">
                                    @using (Html.BeginForm("EditItem", "Home", FormMethod.Get))
                                    {
                                        @Html.ValidationSummary(true)
                                        <input asp-for="Id" type="number" value="@i" hidden />
                                        <p hidden>@Html.EditorFor(m => m.Items)</p>
                                        <button type="submit">Rediger</button>
                                    }

                                </li>
                                <li style="margin-left: 10px; display: inline-block; list-style-type: none;">
                                    @using (Html.BeginForm("DeleteItem", "Home", FormMethod.Get))
                                    {
                                        <button type="submit">Fjern</button>
                                        <p hidden>@Html.EditorFor(m => m.Items)</p>
                                    }

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 py-2">
                    <button name="CollapButton" type="button" class="collapsible bg-danger text-white" value="">@Model.Items[i].HostName</button>
                    <div class="content" style="border : solid 2px black;">
                        <div>

                            <button class="RentColorRed"></button>
                            <p>Status: Udlånt</p>

                            <dl style="margin: 0px 10px 0px 0px;">
                                <dt>
                                    Brugernavn:
                                </dt>
                                <dd>
                                    @Model.Items[i].UserName
                                </dd>
                                <dt>
                                    Ip:
                                </dt>
                                <dd>
                                    @Model.Items[i].HostIp<br />
                                </dd>
                                <dt>
                                    Adgangskode:
                                </dt>
                                <dd>
                                    @Model.Items[i].HostPassword<br />
                                </dd>
                                <dt>
                                    VmWare version:
                                </dt>
                                <dd>
                                    @Model.Items[i].VmWareVersion<br />
                                </dd>
                                @if (Model.Bookings != null)
                                {
                                    <dt>
                                        Lånt til:
                                    </dt>
                                    <dd>
                                        @Model.Bookings.Where(x => x.Id == Model.Items[i].Id).Select(x => x.RentedClient)
                                    </dd>
                                    <dt>
                                        Lejning udløber:
                                    </dt>
                                    <dd>
                                        @Model.Bookings.Where(x => x.Id == Model.Items[i].Id).Select(x => x.HostRentedForCourse.TurnInDate)
                                    </dd>
                                }
                            </dl>

                            <ul style="display: inline-block; list-style-type:none;">
                                <li style="margin-left: 10px; display: inline-block; list-style-type: none;">
                                    @using (Html.BeginForm("EditItem", "Home", FormMethod.Get))
                                    {
                                        @Html.ValidationSummary(true)
                                        <input asp-for="Id" type="number" value="@i" hidden />
                                        <p hidden>@Html.EditorFor(m => m.Items)</p>
                                        <button type="submit">Rediger</button>
                                    }

                                </li>
                                <li style="margin-left: 10px; display: inline-block; list-style-type: none;">
                                    @using (Html.BeginForm("DeleteItem", "Home", FormMethod.Get))
                                    {
                                        <button type="submit">Fjern</button>
                                        <p hidden>@Html.EditorFor(m => m.Items)</p>
                                    }

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
