@model Login
@{
    ViewData["Title"] = "Home Page";
}

<div class="imgcontainer">
    <img src="~/Images/ZBCLogo.jpg" height="150" width="150" />
</div>
<div class="container">
    @using (Html.BeginForm("HomePage", "Home", FormMethod.Post))
    {
        <label for="uname"><b>Initialer</b></label>
        @Html.TextBoxFor(m => m.Initials)

        <label for="upass"><b>Password</b></label>
        @Html.TextBoxFor(m => m.Password)
        
        <button type="submit">Login</button>
    }
</div>
