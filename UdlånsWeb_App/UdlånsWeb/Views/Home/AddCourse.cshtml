@model UdlånsWeb.Models.Course

@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Opret Fag</h1>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="AddCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfGroupsPerHost" class="control-label"></label>
                <input asp-for="NumberOfGroupsPerHost" type="number" class="form-control" />
                <span asp-validation-for="NumberOfGroupsPerHost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" type="number" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div hidden class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Defined" /> @Html.DisplayNameFor(model => model.Defined)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="4" cols="50" input asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
