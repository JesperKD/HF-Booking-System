@model UdlånsWeb.Models.Course

@{
    ViewData["Title"] = "DeleteCourse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Slet Fag</h1>

<h3>Sikker på du gerne vil slette dette fag?</h3>
<div class="row">
    <div class="col-md-5">
        <form asp-action="DeleteCourse">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfGroupsPerHost" class="control-label"></label>
                    <br />
                    <input asp-for="NumberOfGroupsPerHost" class="form-control" />
                    <span asp-validation-for="NumberOfGroupsPerHost" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <br />
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <br />  
                    <textarea rows="4" cols="50" input asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>
