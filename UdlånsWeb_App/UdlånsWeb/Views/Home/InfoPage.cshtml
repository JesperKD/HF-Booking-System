@model UdlånsWeb.Models.BookingViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div style="width:250px">
        <form asp-action="InfoPage">

            <label asp-for="@Model.CourseModel.Name" class="control-label"></label>
            <br />
            <select asp-for="@Model.CourseModel.Name">
                @for (int i = 0; i < Model.CoursesForSelection.Count; i++)
                {
                    <option>@Model.CoursesForSelection[i].Name</option>
                }

            </select>
            <span asp-validation-for="@Model.CourseModel.Name"></span>
            <br />

            <label asp-for="@Model.RentDate" class="control-label"></label>
            <br />

            <input asp-for="@Model.RentDate" class="form-control" />
            <span asp-validation-for="@Model.RentDate" class="text-danger"></span>
            <br />
            @if (Model.CourseModel.Defined == true)
            {
                @foreach (var host in Model.HostRentedForCourse)
                {
                    <label asp-for="@host.TurnInDate" class="control-label"></label>
                    <br />
                    <input asp-for="@host.TurnInDate" class="form-control" />
                    <span asp-validation-for="@host.TurnInDate" class="text-danger"></span>
                    <br />
                }
            }


            <label asp-for="@Model.NumberOfGroups" class="control-label"></label>
            <br />

            <input asp-for="@Model.NumberOfGroups" class="form-control" />
            <span asp-validation-for="@Model.NumberOfGroups" class="text-danger"></span>
            <br />

            <input style="margin-top:20px;" type="submit" value="Book" class="btn btn-primary" />
            <div>
                <a asp-action="Booking">Tilbage</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


