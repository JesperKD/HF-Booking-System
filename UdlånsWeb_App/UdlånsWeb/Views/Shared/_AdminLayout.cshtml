<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZBCHostBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/MainStyle.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <img src="~/Images/ZBCLogo.jpg" alt="zbc logo" style="width:50px; height:50px;" />
                    <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminInfoPage">Booking</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminSite">Host oversigt</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="UserPage">Bruger oversigt</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="CourseSite">Fag oversigt</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Bookings">Booking oversigt</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AddUser">Opret bruger</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AddItem">Opret host</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AddCourse">Opret Fag</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="~/Images/ZBCLogo.jpg" alt="zbc logo" style="width:50px; height:50px;" /> &copy; 2020 - ZBCHostBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>

