@model CourseViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "CourseSite";
}
@for (int i = 0; i < Model.Courses.Count; i++)
{
    <div class="table-responsive">
        <table class="table-bordered w-100 p-3" style="text-align:center;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Courses[i].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Courses[i].CourseNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Courses[i].Duration)
                    </th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(x => x.Courses[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Courses[i].CourseNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Courses[i].Duration)
                    </td>
                </tr>
            </tbody>
        </table>
        <ul style="display: inline-block; list-style-type:none;">
            <li style="margin-left: 10px; display: inline-block; list-style-type: none;">
                @using (Html.BeginForm("EditCourse", "Course", FormMethod.Get))
                {
                    @Html.ValidationSummary(true)
                    <input asp-for="Id" type="number" value="@Model.Courses[i].Id" hidden />
                    <button type="submit">Rediger</button>
                }
            </li>
            <li style="margin-left: 10px; display: inline-block; list-style-type: none;">
                @using (Html.BeginForm("DeleteCourse", "Course", FormMethod.Get))
                {
                    @Html.ValidationSummary(true)
                    <input asp-for="Id" type="number" value="@Model.Courses[i].Id" hidden />
                    <button type="submit">Fjern</button>
                }
            </li>
        </ul>
    </div>
}