@model UdlånsWeb.Models.Course

@{
    ViewData["Title"] = "DeleteCourse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>DeleteCourse</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-4">

        <form asp-action="DeleteCourse" asp-controller="Course">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfStudents" class="control-label"></label>
                    <br />
                    <input asp-for="NumberOfStudents" class="form-control" />
                    <span asp-validation-for="NumberOfStudents" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <br />
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>
